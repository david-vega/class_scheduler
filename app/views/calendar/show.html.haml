.row
  .col-md-12.text-center
    .well.controls
      = link_to calendar_path(date: @date - 1.month), class: 'btn btn-default' do
        %i.glyphicon.glyphicon-backward
      = "#{@date.strftime('%B')} #{@date.year}"
      = link_to calendar_path(date: @date + 1.month), class: 'btn btn-default' do
        %i.glyphicon.glyphicon-forward
.row
  .col-md-12
    = @date

    = calendar @date do |date|
      = date.day
      .reservations
        - reservations_today(date).each do |reservation|
          %div{ class: "reservation_#{reservation.id}" }
            = reservation.name
